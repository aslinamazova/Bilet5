@model UpdateTeamVM
@{
    ViewData["Title"] = "Update";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-secondary rounded h-100 p-4">
                <div asp-validation-summary="ModelOnly"></div>
                <form method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" class="form-control">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control">
                        <span asp-validation-for="Name"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Surname" class="form-label"></label>
                        <input asp-for="Surname" class="form-control">
                        <span asp-validation-for="Surname"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Position" class="form-label"></label>
                        <input asp-for="Position" class="form-control">
                        <span asp-validation-for="Position"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="JobDescription" class="form-label"></label>
                        <input asp-for="JobDescription" class="form-control">
                        <span asp-validation-for="JobDescription"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Photo" class="form-label"></label>
                        <input asp-for="Photo" class="form-control">
                        <span asp-validation-for="Photo"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Update</button>

                </form>
            </div>
        </div>

    </div>
</div>